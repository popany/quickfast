    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) InterpretApplication file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Examples/InterpretApplication/interpretapplication",
            "args": ["-t", "/tmp/template_file.xml", "-file", "/tmp/step_raw", "-buffersize", "10240", "-buffers", "3"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) InterpretApplication",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Examples/InterpretApplication/interpretapplication",
            "args": ["-t", "/tmp/template_file.xml", "-multicast", "224.0.0.88:50012", "-mlisten", "0.0.0.0", "-streaming"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}